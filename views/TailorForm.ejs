<%- include('header') %>
    <!DOCTYPE html>
    <html lang="gu">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Tailor Desk Account Software</title>
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                font-size: 12px;
                background: linear-gradient(135deg, #e6f3ff, #fff0e6, #f0ffe6, #ffe6f0);
            }

            .header {
                background-color: #c0c0c0;
                padding: 5px;
                border-bottom: 1px solid #808080;
            }

            .title-bar {
                background-color: #c0c0c0;
                color: black;
                padding: 3px 8px;
                font-weight: normal;
                text-align: center;
                border: 1px outset #c0c0c0;
            }

            .menu-bar {
                background-color: #e0e0e0;
                border: 1px inset #e0e0e0;
                padding: 2px;
            }

            .menu-item {
                display: inline-block;
                padding: 4px 12px;
                margin: 1px;
                background-color: #f0f0f0;
                border: 1px outset #f0f0f0;
                cursor: pointer;
            }

            .menu-item:hover {
                background-color: #e8e8e8;
            }

            .tab-bar {
                background-color: #e0e0e0;
                padding: 2px;
                border-bottom: 1px solid #808080;
            }

            .tab {
                display: inline-block;
                padding: 3px 8px;
                margin-right: 2px;
                background-color: #f0f0f0;
                border: 1px outset #f0f0f0;
                cursor: pointer;
            }

            .tab.active {
                background-color: white;
                border-bottom: 1px solid white;
            }

            .main-container {
                padding: 10px;
                background: inherit;
            }

            .customer-info {
                margin-bottom: 15px;
            }

            .field-group {
                display: inline-block;
                margin-right: 20px;
                vertical-align: top;
            }

            .field-label {
                font-weight: bold;
                margin-right: 5px;
            }

            .field-input {
                border: 1px inset #c0c0c0;
                padding: 2px;
                background-color: white;
            }

            .measurements-container {
                display: flex;
                gap: 20px;
                margin-bottom: 20px;
            }

            .measurement-section {
                flex: 1;
            }

            .section-title {
                font-weight: bold;
                margin-bottom: 10px;
                color: #000080;
            }

            .measurement-row {
                display: flex;
                align-items: center;
                margin-bottom: 3px;
            }

            .measurement-label {
                width: 50px;
                text-align: left;
                margin-right: 10px;
            }

            .measurement-input {
                width: 60px;
                border: 1px inset #c0c0c0;
                padding: 2px;
                background-color: #f5f5dc;
                text-align: center;
            }

            .measurement-input-small {
                width: 40px;
                margin-left: 5px;
            }

            .notes-area {
                width: 300px;
                height: 20px;
                border: 1px inset #c0c0c0;
                background-color: #f5f5dc;
                margin-bottom: 10px;
            }

            .options-container {
                display: flex;
                gap: 20px;
                margin-top: 10px;
            }

            .options-section {
                flex: 1;
            }

            .checkbox-group {
                display: flex;
                flex-wrap: wrap;
                gap: 10px 15px;
            }

            .checkbox-item {
                display: flex;
                align-items: center;
                font-size: 11px;
            }

            .checkbox-item input[type="checkbox"] {
                margin-right: 3px;
            }

            .bottom-bar {
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                background-color: #e0e0e0;
                border-top: 1px solid #808080;
                padding: 5px;
                display: flex;
                gap: 10px;
            }

            .bottom-button {
                padding: 2px 15px;
                border: 1px outset #e0e0e0;
                background-color: #e0e0e0;
                cursor: pointer;
            }

            .dropdown {
                border: 1px inset #c0c0c0;
                background-color: white;
                padding: 2px;
            }
        </style>
    </head>

