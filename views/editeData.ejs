                            <div class="checkbox-item">
                                <input type="checkbox" name="options[]" value="2_ચપટી_નાની" <%= tailor.options && tailor.options.includes('2_ચપટી_નાની') ? 'checked' : '' %> >
                                <label>2 ચપટી નાની</label>
