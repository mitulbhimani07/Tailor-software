                        <div class="checkbox-group">
                            <div class="checkbox-item">
                                <input type="checkbox" name="options[]" value="ક્રોસ_પોકેટ" <%= tailor.options && tailor.options.includes('ક્રોસ_પોકેટ') ? 'checked' : '' %> >
